<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00A6FF"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00A6FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="< Back"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Profile"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_baseline_settings_24" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="107dp"
            android:layout_height="98dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_baseline_person_pin_24" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:text="Profile Name"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/friendsNum"
            android:layout_width="wrap_content"
            android:layout_below="@id/profileName"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="125"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:id="@+id/friendsLabel"
            android:layout_below="@id/friendsNum"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:layout_marginTop="40dp"
            android:id="@+id/followersNum"
            android:layout_toRightOf="@id/friendsNum"
            android:layout_below="@id/profileName"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:layout_toRightOf="@id/friendsNum"
            android:id="@+id/followersLabel"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/followersNum"
            android:textColor="#fff"/>
    </RelativeLayout>

    <LinearLayout
        android:weightSum="8"
        android:background="#1298F1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="30dp"
        android:orientation="vertical">
        <EditText
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Email: "
            android:textSize="20sp"
            android:textColor="#fff"/>
        <EditText
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Phone: "
            android:textSize="20sp"
            android:textColor="#fff"/>
        <EditText
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Skype: "
            android:textSize="20sp"
            android:textColor="#fff"/>
        <EditText
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Web: "
            android:textSize="20sp"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>